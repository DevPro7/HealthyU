<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/splash"
        android:id="@+id/registerImageView"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:background="#b692D14F"
        android:id="@+id/registerUsername"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Username"
        android:gravity="center"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:background="#b692D14F"
        android:id="@+id/registerPassword"
        android:hint="Password"
        android:gravity="center"
        android:layout_below="@+id/registerUsername"
        android:layout_alignLeft="@+id/registerUsername"
        android:layout_alignStart="@+id/registerUsername"
        android:layout_marginTop="18dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:background="#b692D14F"
        android:id="@+id/registerPasswordConfirm"
        android:hint="Confirm Password"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/registerPassword"
        android:layout_alignLeft="@+id/registerPassword"
        android:layout_alignStart="@+id/registerPassword" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Register"
        android:background="#FF92D14F"
        android:layout_below="@+id/registerPasswordConfirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:id="@+id/registerUserButton"
        android:onClick="onRegisterClick"/>

    <ImageView
        android:id="@+id/registerPasswordConfirmImage"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/registerPasswordConfirm"
        android:layout_toRightOf="@+id/registerPasswordConfirm"
        android:src="@drawable/exclamation_red"
        android:layout_alignTop="@+id/registerPasswordConfirm"
        android:layout_marginLeft="2dp"/>
</RelativeLayout>