<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Space
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/calRankTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity Rankings"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/listheader"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calRankTV"
        android:text="Rank"
        android:gravity="center"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calRankTV"
        android:layout_toRightOf="@+id/listheader"
        android:layout_toEndOf="@+id/listheader"
        android:text="ID"
        android:gravity="center"
        android:textColor="#000000"
        android:id="@+id/textView3" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:id="@+id/textView4" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Activity"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/calRankTV"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listheader"
        android:layout_above="@id/center">
        <ListView
            android:id="@+id/activityList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/center"
            android:layout_below="@+id/calRankTV"/>

    </LinearLayout>

    <TextView
        android:id="@+id/bottomlistheader"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityrankTV"
        android:text="Rank"
        android:gravity="center"
        android:textColor="#000000" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:gravity="center"
        android:textColor="#000000"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/bottomlistheader"
        android:layout_alignBottom="@+id/bottomlistheader"
        android:layout_toRightOf="@+id/bottomlistheader"
        android:layout_toEndOf="@+id/bottomlistheader" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:gravity="center"
        android:textColor="#000000"
        android:id="@+id/textView7"
        android:layout_below="@+id/activityrankTV"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Calories"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/activityrankTV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/activityrankTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calories Rankings"
        android:gravity="center"
        android:layout_below="@+id/center"
        android:layout_toRightOf="@+id/center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/center" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottomlistheader">
        <ListView
            android:id="@+id/calorieList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activityrankTV"
            android:layout_alignParentBottom="true"/>

    </LinearLayout>
</RelativeLayout>